
@{
    Layout = "_Layout";
}

@using Inventory.Models;

<h2>Inventory</h2>
@if (Model.Count == 0)
{
    <h3>No Collections have been added yet!</h3>
}

@foreach (Collection collection in Model)
{
    <li>@Html.ActionLink($"{ collection.Name }", "Details", new { id = collection.Id })</li>
}

<p>@Html.ActionLink("Add new collection", "Create")</p>